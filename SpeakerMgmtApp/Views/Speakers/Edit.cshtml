@model SpeakerViewModel

@{
    ViewData["Title"] = "";
    Layout = "";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Speakers" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
             <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SpeakerFirstName" class="control-label"></label>
                        <input asp-for="SpeakerFirstName" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SpeakerLastName" class="control-label"></label>
                        <input asp-for="SpeakerLastName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SpeakerFirstName" class="control-label"></label>
                        <input asp-for="SpeakerFirstName" class="form-control" />
                    </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SpeakerPicture" class="control-label"></label>
                    </div>
                    <input type="file" asp-for="SpeakerPicture"  />
                    <img src="../Speakers/RetrieveImage/@Model.Id" class="img-thumbnail" height="100" width="100" asp-append-version="true" />  
                </div>       
              
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Qualification" class="control-label"></label>
                        <input asp-for="Qualification" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Experience" class="control-label"></label>
                        <input asp-for="Experience" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SpeakingDate" class="control-label"></label>
                        <input asp-for="SpeakingDate" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SpeakingTime" class="control-label"></label>
                        <input asp-for="SpeakingTime" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Venue" class="control-label"></label>
                        <textarea asp-for="Venue" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Update</button>
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>