@model SpeakerViewModel

@{
    ViewData["Title"] = "Speakers";
        Layout = "../Shared/_Layout";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <i class="fas fa-tasks fa-2x"></i>
            <h4 class="cardHeaderIconStyle"> Speakers</h4>
            <button type="button" class="btn btn-info btn-round float-right paddingright5" onclick="openAddSpeakerModal()">
                <i class="fas fa-plus mr-1"></i> New Speaker 
            </button>
        </div>
        <div class="card-body">
            <div class="card-body">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th>@Html.DisplayNameFor(model => model.SpeakerPicture)</th>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.SpeakerFirstName)</th>
                                <th>@Html.DisplayNameFor(model => model.SpeakerLastName)</th>
                                <th>@Html.DisplayNameFor(model => model.SpeakingDate)</th>
                                <th>@Html.DisplayNameFor(model => model.SpeakingTime)</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;  
                            }
                            @foreach(var item in Model.Speakers)
                            {
                                <tr>
                                    <td class="text-center">@(i = i + 1)</td>
                                    <td>
                                        <img src="../Speakers/RetrieveImage/@item.Id" alt="Profile Picture" height=100 width=100 />  
                                    </td>
                                    <td>@item.SpeakerFullName</td>
                                    <td>@item.SpeakerFirstName</td>
                                    <td>@item.SpeakerLastName</td>
                                    <td>@item.SpeakingDate?.ToString("MM/dd/yyyy")</td>
                                    <td>@item.SpeakingTime?.ToShortTimeString()</td>
                                    <td>
                                        <button class="btn btn-info btn-round" type="button" onclick="openDetailSpeakerModal(@item.Id)">
                                            <i class="far fa-address-card font-size-14"> </i>
                                            
                                        </button>
                                         <button class="btn btn-success btn-round" type="button" onclick="openEditSpeakerModal(@item.Id)">
                                            <i class="fas fa-pencil-alt font-size-14"> </i>
                                            
                                        </button>
                                         <button class="btn btn-danger btn-round" type="button" onclick="openDeleteSpeakerModal(@item.Id)">
                                            <i class="fas fa-trash-alt font-size-14"> </i>
                                            
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/speaker.js" asp-append-version="true"></script>
    <style>
        .cardHeaderIconStyle {
            display: inline-block;
            padding-right 15px;
            width: 200px;
        }
    </style>
}